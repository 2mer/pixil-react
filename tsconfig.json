{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": false,
		"module": "es6",
		"target": "es6",
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "./build/types",
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"lib": [
			"es2017",
			"dom"
		],
	},
	"include": [
		"src/**/*"
	]
}